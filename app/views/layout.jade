!!! 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=yes')
    title McKay Development: #{title}
    meta(name='description', content='Personal website and portfolio of Patrick McKay, a professional full stack developer in Denver, Colorado.')
    meta(name='keywords', content='patrick mckay, web developer, denver, colorado, javascript, js, jquery, angular, bootstrap, php, html5, css3, blog')
    block css
      link(rel='stylesheet', type='text/css', href='/css/isotope.css', media='screen')
      link(rel='stylesheet', href='/js/fancybox/jquery.fancybox.css', type='text/css', media='screen')
      link(rel='stylesheet', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/bootstrap-theme.css')
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='/skin/default.css')
  body
    block navbar
      section#header.appear
      .navbar.navbar-fixed-top(role='navigation', data-0='line-height:100px; height:100px; background-color:rgba(0,0,0,0.3);', data-300='line-height:60px; height:60px; background-color:rgba(0,0,0,1);')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.fa.fa-bars.color-white
            h1
              a.navbar-brand(href='/#header', data-0='line-height:90px;', data-300='line-height:50px;')
                | McKay Development
          .navbar-collapse.collapse
            ul.nav.navbar-nav(data-0='margin-top:20px;', data-300='margin-top:5px;')
              li.active
                a(href='/#header') Home
              li
                a(href="/#section-skills") Skills
              li
                a(href='/#section-about') About
              li
                a(href='/#section-works') Portfolio
              li
                a(href='/#section-contact') Contact
              li
                a(href="/blog") Blog
              li
                a(href="/about-site") Site Info
          // /.navbar-collapse
    block content
     
    block scripts
      script(src='/js/modernizr-2.6.2-respond-1.1.0.min.js')
      script(src='/js/jquery-1.11.1.min.js')
      script(src='/js/jquery.easing.1.3.js')
      script(src='/js/bootstrap.min.js')
      script(src='/js/jquery.isotope.min.js')
      script(src='/js/fancybox/jquery.fancybox.pack.js')
      script(src='/js/skrollr.min.js')
      script(src='/js/jquery.scrollTo-1.4.3.1-min.js')
      script(src='/js/jquery.localscroll-1.2.7-min.js')
      script(src='/js/stellar.js')
      script(src='/js/jquery.appear.js')
      script(src='/js/validate.js')
      script(src='/js/main.js')
